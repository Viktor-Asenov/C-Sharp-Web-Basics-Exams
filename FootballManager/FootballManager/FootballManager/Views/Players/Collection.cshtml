<h1 class="text-center mt-2">My Collection</h1>
<div class="row mt-2 mb-4">
    @foreach (var userPlayer in Model.Players)
    {
        <div class="player col-6 col-lg-3 game-player">
            <img src="@userPlayer.ImageUrl"
                 class="player-img-top img-fluid player-image">
            <div class="player-body">
                <h5 class="player-title text-center" data-toggle="tooltip" data-placement="bottom"
                    title="@userPlayer.Description">
                    @userPlayer.FullName
                </h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">@userPlayer.Position</li>
                    <li class="list-group-item">
                        <span class="speed-stat">@userPlayer.Speed</span><span class="endurance-stat">@userPlayer.Endurance</span>
                    </li>
                </ul>
                <a href="/Players/RemoveFromCollection?playerId=@userPlayer.Id" class="btn btn-block btn-danger">Remove from Collection</a>
            </div>
        </div>
    }
</div>
